<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/titu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Devolução de Equipamento"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titu"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:text="Selecione a data em que o equipamento foi devolvido"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnCalendarioDevolucao"
                android:layout_width="match_parent"
                android:background="#f4f4f4"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttitulo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/calendario_icone"
                android:drawablePadding="20dp"
                android:padding="16dp"
                android:text="31/10/2018" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnCalendarioDevolucao"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/confirmarDevolucao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#00218c"
                    android:text="Confirmar devolução"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="#f7f7f7"
                    android:text="Cancelar"
                    android:textColor="#ff0000" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>