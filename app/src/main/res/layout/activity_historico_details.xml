<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/corDeFundo"
    tools:context=".CalendarDetailsActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_border_top">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/rotary_logo" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/nomeDoClube"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageView"
            android:padding="8dp"
            android:text="Nome do Clube"
            android:textColor="@color/textoCabecalho"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@color/btnVoltar"
            android:src="@drawable/ic_back" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtInfoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:text="nome do paciente"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtInfoNome"
            android:layout_margin="14dp">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtInfoE1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:padding="4dp"
                    android:text="Equipamento: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoEquipamento1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtInfoE1"
                    android:padding="4dp"
                    android:text="equipamento do paciente"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoA1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoE1"
                    android:layout_marginBottom="16dp"
                    android:padding="4dp"
                    android:text="Empréstimo em: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoAdicionado1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoE1"
                    android:layout_toRightOf="@+id/txtInfoA1"
                    android:padding="4dp"
                    android:text="29/12/2017"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoD1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoA1"
                    android:layout_marginBottom="16dp"
                    android:padding="4dp"
                    android:text="Devolução em: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoDevolucao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoA1"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/txtInfoD1"
                    android:padding="4dp"
                    android:text="25/01/2018"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoDevolucao1"
                    android:layout_marginBottom="16dp"
                    android:padding="4dp"
                    android:text="Telefone: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoDevolucao1"
                    android:layout_toRightOf="@+id/tel"
                    android:padding="4dp"
                    android:text="xxx-99918740"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tel"
                    android:layout_marginBottom="16dp"
                    android:padding="4dp"
                    android:text="Email: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tel"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/email"
                    android:padding="4dp"
                    android:text="xxxx@xxxx.com"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/endereco"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:padding="4dp"
                    android:text="Endereço: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:layout_toRightOf="@+id/email"
                    android:padding="4dp"
                    android:text="Rua Das Gaivotas, número 405, Bairro Marista, Colatina-ES"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btnExcluirDados"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_remove"
        android:padding="12dp"
        android:text="Excluír dados permanentemente"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtInfoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>