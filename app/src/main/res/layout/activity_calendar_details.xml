<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    tools:context=".CalendarDetailsActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_border_top">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/rotary_logo" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/nomeDoClube"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageView"
            android:padding="8dp"
            android:text="Nome do Clube"
            android:textColor="@color/textoCabecalho"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@color/btnVoltar"
            android:src="@drawable/ic_back" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:elevation="10dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtInfoNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="6dp"
                android:text="nome do paciente"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_margin="2dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp">

                <TextView
                    android:id="@+id/txtInfoE1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Equipamento: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoEquipamento1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtInfoE1"
                    android:padding="4dp"
                    android:text="equipamento do paciente"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoA1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoE1"
                    android:padding="4dp"
                    android:text="Empréstimo em: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoAdicionado1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoE1"
                    android:layout_toRightOf="@+id/txtInfoA1"
                    android:padding="4dp"
                    android:text="29/12/2017"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoD1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoA1"
                    android:padding="4dp"
                    android:text="Devolução prevista: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoDevolucao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoA1"
                    android:layout_toRightOf="@+id/txtInfoD1"
                    android:padding="4dp"
                    android:text="25/01/2018"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnEquip_foi_devolvido_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoDevolucao1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:background="@drawable/buttons"
                    android:padding="12dp"
                    android:text="Confirmar devolução"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:layout_margin="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="14dp">

                <TextView
                    android:id="@+id/txtInfoE2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Equipamento: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoEquipamento2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtInfoE2"
                    android:padding="4dp"
                    android:text="equipamento do paciente"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoA2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoE2"
                    android:padding="4dp"
                    android:text="Empréstimo em: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoAdicionado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoE2"
                    android:layout_toRightOf="@+id/txtInfoA2"
                    android:padding="4dp"
                    android:text="29/12/2017"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoD2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoA2"
                    android:padding="4dp"
                    android:text="Devolução prevista: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInfoDevolucao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInfoA2"
                    android:layout_toRightOf="@+id/txtInfoD2"
                    android:padding="4dp"
                    android:text="25/01/2018"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnEquip_foi_devolvido_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInfoDevolucao2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:background="@drawable/buttons"
                    android:padding="12dp"
                    android:text="Confirmar devolução"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>