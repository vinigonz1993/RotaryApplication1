<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calendarioNomePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#010761"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="Nome Paciente"
                android:textColor="@color/textoCabecalho"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarioNomePaciente"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/calendarioDataAdded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Data adicionado"
                    android:textColor="@color/textoListas"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/calendarioDataEnded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendarioDataAdded"
                    android:layout_marginLeft="10dp"
                    android:text="Data de devolução"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tempoRestante_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_tempo_restante"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/textoListas"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/calendarioDataAdded2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Data adicionado"
                    android:textColor="@color/textoListas"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/calendarioDataEnded2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendarioDataAdded2"
                    android:layout_marginLeft="10dp"
                    android:text="Data de devolução"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tempoRestante_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_tempo_restante"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/textoListas"
                    android:textSize="18dp" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>